<%- model_class = @firm.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:logo) %>:</strong></dt>
  <dd><%= s @firm.logo %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= s @firm.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><pre><%= s @firm.address%></pre></dd>

  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= s @firm.email %></dd>

  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= s @firm.phone %></dd>

  <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
  <dd><%= s @firm.fax %></dd>

  <dt><strong><%= model_class.human_attribute_name(:vat) %>:</strong></dt>
  <dd><%= s @firm.vat %></dd>

  <dt><strong><%= model_class.human_attribute_name(:bank) %>:</strong></dt>
  <dd><%= s @firm.bank %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              firms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_firm_path(@firm), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              firm_path(@firm),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
