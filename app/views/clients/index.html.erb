<%- model_class = Client.new.class -%>
<h1> Klanten </h1>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_client_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:bedrijf) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:vat) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th style="width: 11em;"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.name, client_path(client) %></td>
        <td><%= client.firm.name if client.firm %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.vat %></td>
        <td><%= client.address %></td>
        <td>
 
          <%= link_to t(:edit, :default=>t("helpers.links.edit")),
                      edit_client_path(client), :class => 'btn btn-mini' %>
          <%= link_to t(:destroy, :default => t("helpers.links.destroy")),
                      client_path(client),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


