<%- model_class = @client.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %>
 <%= @client.name %>
</h1>

<dl class="dl-horizontal">
  <dt><strong> Belongs to firm:</strong></dt>
  <dd><%= @client.firm.name if @client.firm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= s @client.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= s @client.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= s @client.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
  <dd><%= s @client.fax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vat) %>:</strong></dt>
  <dd><%= s @client.vat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bank) %>:</strong></dt>
  <dd><%= s @client.bank %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= s @client.address %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clients_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_client_path(@client), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              client_path(@client),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>


<%= render 'invoices/invoices', :invoices => @client.invoices %>
